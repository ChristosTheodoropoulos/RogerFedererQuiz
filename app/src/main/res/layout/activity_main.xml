<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.rogerfedererquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <EditText
            android:id="@+id/name_edit_text"
            style="@style/edit_text"
            android:hint="@string/name_edit_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rogerfederer_6"
            android:scaleType="centerCrop"/>

        <TextView
            style="@style/question_text_view"
            android:text="@string/question_1" />

        <TextView
            style="@style/question_body_text_view"
            android:text="@string/question_1_body" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <RadioButton
                android:id="@+id/question_1_radio_button_1"
                style="@style/radio_checkbox_buttons"
                android:text="@string/total_gs_1" />

            <RadioButton
                android:id="@+id/question_1_radio_button_2"
                style="@style/radio_checkbox_buttons"
                android:text="@string/total_gs_2" />

            <RadioButton
                android:id="@+id/question_1_radio_button_3"
                style="@style/radio_checkbox_buttons"
                android:text="@string/total_gs_3" />

            <RadioButton
                android:id="@+id/question_1_radio_button_4"
                style="@style/radio_checkbox_buttons"
                android:text="@string/total_gs_4" />
        </RadioGroup>

        <TextView
            style="@style/question_text_view"
            android:text="@string/question_2" />

        <TextView
            style="@style/question_body_text_view"
            android:text="@string/question_2_body" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <CheckBox
                    android:id="@+id/question_2_check_box_1"
                    style="@style/radio_checkbox_buttons"
                    android:text="@string/english_language"/>

                <CheckBox
                    android:id="@+id/question_2_check_box_2"
                    style="@style/radio_checkbox_buttons"
                    android:text="@string/spanish_language"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="28dp">

                <CheckBox
                    android:id="@+id/question_2_check_box_3"
                    style="@style/radio_checkbox_buttons"
                    android:text="@string/french_language"/>

                <CheckBox
                    android:id="@+id/question_2_check_box_4"
                    style="@style/radio_checkbox_buttons"
                    android:text="@string/german_language"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            style="@style/question_text_view"
            android:text="@string/question_3" />

        <TextView
            style="@style/question_body_text_view"
            android:text="@string/question_3_body" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <RadioButton
                android:id="@+id/question_3_radio_button_1"
                style="@style/radio_checkbox_buttons"
                android:text="@string/date_1" />

            <RadioButton
                android:id="@+id/question_3_radio_button_2"
                style="@style/radio_checkbox_buttons"
                android:text="@string/date_2" />

            <RadioButton
                android:id="@+id/question_3_radio_button_3"
                style="@style/radio_checkbox_buttons"
                android:text="@string/date_3" />

            <RadioButton
                android:id="@+id/question_3_radio_button_4"
                style="@style/radio_checkbox_buttons"
                android:text="@string/date_4" />

        </RadioGroup>

        <TextView
            style="@style/question_text_view"
            android:text="@string/question_4" />

        <TextView
            style="@style/question_body_text_view"
            android:text="@string/question_4_body" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <RadioButton
                android:id="@+id/question_4_radio_button_1"
                style="@style/radio_checkbox_buttons"
                android:text="@string/age_1" />

            <RadioButton
                android:id="@+id/question_4_radio_button_2"
                style="@style/radio_checkbox_buttons"
                android:text="@string/age_2" />

            <RadioButton
                android:id="@+id/question_4_radio_button_3"
                style="@style/radio_checkbox_buttons"
                android:text="@string/age_3" />

            <RadioButton
                android:id="@+id/question_4_radio_button_4"
                style="@style/radio_checkbox_buttons"
                android:text="@string/age_4" />

        </RadioGroup>

        <TextView
            style="@style/question_text_view"
            android:text="@string/question_5" />

        <TextView
            style="@style/question_body_text_view"
            android:text="@string/question_5_body" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/question_5_check_box_1"
                    style="@style/radio_checkbox_buttons"
                    android:text="@string/idol_1"/>

                <CheckBox
                    android:id="@+id/question_5_check_box_2"
                    style="@style/radio_checkbox_buttons"
                    android:text="@string/idol_2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp">

                <CheckBox
                    android:id="@+id/question_5_check_box_3"
                    style="@style/radio_checkbox_buttons"
                    android:text="@string/idol_3"/>

                <CheckBox
                    android:id="@+id/question_5_check_box_4"
                    style="@style/radio_checkbox_buttons"
                    android:text="@string/idol_4"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            style="@style/question_text_view"
            android:text="@string/question_6" />

        <TextView
            style="@style/question_body_text_view"
            android:text="@string/question_6_body" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <RadioButton
                android:id="@+id/question_6_radio_button_1"
                style="@style/radio_checkbox_buttons"
                android:text="@string/week_number_1" />

            <RadioButton
                android:id="@+id/question_6_radio_button_2"
                style="@style/radio_checkbox_buttons"
                android:text="@string/week_number_2" />

            <RadioButton
                android:id="@+id/question_6_radio_button_3"
                style="@style/radio_checkbox_buttons"
                android:text="@string/week_number_3" />

            <RadioButton
                android:id="@+id/question_6_radio_button_4"
                style="@style/radio_checkbox_buttons"
                android:text="@string/week_number_4" />

        </RadioGroup>

        <TextView
            style="@style/question_text_view"
            android:text="@string/question_7" />

        <TextView
            style="@style/question_body_text_view"
            android:text="@string/question_7_body" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <RadioButton
                android:id="@+id/question_7_radio_button_1"
                style="@style/radio_checkbox_buttons"
                android:text="@string/total_atp_finals_title_1" />

            <RadioButton
                android:id="@+id/question_7_radio_button_2"
                style="@style/radio_checkbox_buttons"
                android:text="@string/total_atp_finals_title_2" />

            <RadioButton
                android:id="@+id/question_7_radio_button_3"
                style="@style/radio_checkbox_buttons"
                android:text="@string/total_atp_finals_title_3" />

            <RadioButton
                android:id="@+id/question_7_radio_button_4"
                style="@style/radio_checkbox_buttons"
                android:text="@string/total_atp_finals_title_4" />
        </RadioGroup>

        <TextView
            style="@style/question_text_view"
            android:text="@string/question_8" />

        <TextView
            style="@style/question_body_text_view"
            android:text="@string/question_8_body" />

        <EditText
            android:id="@+id/question_8_answer"
            style="@style/edit_text"
            android:hint="@string/answer_edit_text" />

        <TextView
            style="@style/question_text_view"
            android:text="@string/question_9" />

        <TextView
            style="@style/question_body_text_view"
            android:text="@string/question_9_body" />

        <EditText
            android:id="@+id/question_9_answer"
            style="@style/edit_text"
            android:hint="@string/answer_edit_text" />

        <TextView
            style="@style/question_text_view"
            android:text="@string/question_10" />

        <TextView
            style="@style/question_body_text_view"
            android:text="@string/question_10_body" />

        <EditText
            android:id="@+id/question_10_answer"
            style="@style/edit_text"
            android:hint="@string/answer_edit_text" />

        <Button
            android:id="@+id/submit_button"
            style="@style/submit_button"
            android:text="@string/submit_button"/>

    </LinearLayout>

</ScrollView>
